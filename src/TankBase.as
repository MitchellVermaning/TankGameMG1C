package src  {	import flash.events.Event;	import flash.display.MovieClip;		public class TankBase extends MovieClip	{		//protected var tankBodyArt:MovieClip;		protected var tankBody:TankBodyArt;		protected var tankTurretArt:TankTurretArt;		public var turretAngle:Number = 0;		public function TankBase() {			// constructor code						this.addEventListener(Event.ENTER_FRAME, loop);						tankBody = new TankBodyArt(); //instantieren van de class			this.addChild(tankBody); //class op het scherm zetten binnen Tank.as						tankTurretArt = new TankTurretArt();			this.addChild(tankTurretArt);					}				public function loop(e:Event):void		{			var dx:Number = mouseX;			var dy:Number = mouseY;						var radian:Number = Math.atan2(dy, dx);			var angle:Number = radian * 180 / Math.PI; //omzetten radian naar angle						tankTurretArt.rotation = angle;										// angle * Math.PI / 180										//-180 tot 180 radian de rotatie moet omgezet worden naar radians.													tankTurretArt.rotation = angle;			turretAngle = tankTurretArt.rotation; //Hiermee kun je in de main ook de angle lezen		}	}	}