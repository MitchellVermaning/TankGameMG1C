package src {		import flash.display.Bitmap;	import flash.display.Sprite;	import flash.events.Event;	import flash.geom.Point;			public class Ball extends Sprite 	{		[Embed(source = "../lib/ball.png")]		private var ballHigh:Class;		private var imageInstance:Bitmap;		private var moveX:Number = 0;		private var moveY:Number = 0;		private var speed:Number = 8;		public function Ball(r:Number, tPos:Point) 		{			this.rotation = r;			var radian:Number = r * Math.PI / 180;			moveX = Math.cos(radian);			moveY = Math.sin(radian);						this.x = tPos.x + (60 * moveX);			this.y = tPos.y + (50 * moveY);						this.addEventListener(Event.ADDED_TO_STAGE, init);		}		private function init(e:Event):void		{			imageInstance = new ballHigh();			addChild(imageInstance);						//this.x = stage.stageWidth - this.width + 100;			//this.y = 90;			//this.height = 30;			//this.width = 192;			this.scaleX = this.scaleY = 0.1;			//speedX		}				public function update():void		{			this.x += moveX * speed;			this.y += moveY * speed;		}	}	}